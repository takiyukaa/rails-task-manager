<div class="container">
  <h1>My tasksğŸ“</h1>

  <% @tasks.each do |task| %>
  <div class="card my-3">
    <div class="card-body">
      <% if task.completed? %>
        <i class="far fa-check-square mx-1"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>

      <%= link_to task.title, task_path(task) %>

      <%= link_to task_path(task), method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <% end %>

  <%= link_to tasks_new_path do %>
  <button type="button" class="btn btn-warning"> + Add a new Task</button>
  <% end %>
</div>
